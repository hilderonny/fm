{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "IFC Parser",
            "cwd": "${workspaceRoot}/ifcparser",
            "program": "${workspaceFolder}/ifcparser/test.js"
        },
        {
            "name": "Debug Server Side",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/app.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development",
                "NODE_TLS_REJECT_UNAUTHORIZED": "0"
            },
            "console": "internalConsole",
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name":"Simulate production",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/app.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "production"
            },
            "console": "internalConsole",
            "sourceMaps": true
        },
        {
            "name": "Debug Client Side",
            "type": "chrome",
            "request": "launch",
            "url":"http://localhost",
            "webRoot":"${workspaceRoot}",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "./*": "${workspaceRoot}/*"
            }
            
        },
        {
            "name": "Testen",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [ "--no-timeouts", "test/**/*.js" ],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "test",
                "POSTGRESQL_TEST_DBPREFIX": "test",
                "NODE_TLS_REJECT_UNAUTHORIZED": "0"
            },
            "console": "internalConsole",
            "sourceMaps": false
        }
    ]
}